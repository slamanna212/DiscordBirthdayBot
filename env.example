# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_bot_token_here

# Discord Application Client ID (from Discord Developer Portal)  
DISCORD_CLIENT_ID=your_client_id_here

# Discord Channel ID where birthday announcements will be sent
BIRTHDAY_CHANNEL_ID=your_channel_id_here

# Timezone for birthday notifications (defaults to America/New_York)
TZ=America/New_York

# Hour for birthday notifications in 24-hour format (defaults to 10 = 10:00 AM)
# Must be 0-23: 0=12AM, 6=6AM, 10=10AM, 14=2PM, 18=6PM, 23=11PM
BIRTHDAY_NOTIFICATION_HOUR=10

# Optional: Set to production when deploying
NODE_ENV=development 