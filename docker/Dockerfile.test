# Simple test Dockerfile to debug build issues
FROM node:18-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++ sqlite sqlite-dev

WORKDIR /app

# Copy package files
COPY package*.json ./

# Debug: Show what we have
RUN echo "ğŸ“‹ Files in /app:" && ls -la
RUN echo "ğŸ“¦ Package.json content:" && cat package.json

# Try to install dependencies with verbose output
RUN npm install --only=production --verbose

# Copy application files
COPY src/ ./src/
COPY scripts/ ./scripts/

# Test that everything is working
RUN node -e "console.log('âœ… Node.js is working')"
RUN node -e "require('./src/database'); console.log('âœ… Database module loads')" || echo "âŒ Database module failed to load"

CMD ["node", "src/bot.js"] 